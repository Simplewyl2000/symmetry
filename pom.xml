			</dependency>
			
		</dependencies>
	
	</dependencyManagement>

	<modules>
		<module>api</module>
		<module>demo</module>
		<module>jaxrs</module>
		<module>servlet</module>
		<module>spring</module>
		<module>taglib</module>
		<module>taglib-it</module>
		<module>ui</module>
		<module>ui-html</module>
	</modules>
	
</project>
	
